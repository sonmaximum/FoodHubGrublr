<form {{action 'saveRestaurant' model on='submit'}}>
  <div class="form-group">
    <label for="createRestaurantName">Restaurant Name</label>
    {{input type="text" class="form-control" id="createRestaurantName" placeholder="Restaurant Name" value=model.name required=true}}
    <label for="createRestaurantDesc">Restaurant Description</label>
    {{input type="text" class="form-control" id="createRestaurantDesc" placeholder="Restaurant Description" value=model.description required=true}}
    <label for="createRestaurantAddress">Restaurant Address</label>
    {{input type="text" class="form-control" id="createRestaurantAddress" placeholder="Restaurant Address" value=model.address required=true}}
    <label for="createRestaurantPhoneNumber">Phone Number</label>
    {{input minlength="10" type="text" pattern="[1-9]{1}[0-9]{9}" class="form-control" id="createRestaurantPhoneNumber" placeholder="Phone Number (ten digits)" value=model.phoneNumber required=true}}
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#link-to "my-restaurant"}}Back to "My Restaurant"{{/link-to}}